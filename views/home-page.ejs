<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="/third-party/jquery/dist/jquery.min.js"></script>
    <link rel="stylesheet" href="/home-page.css">
    
    <title>BloodSend</title>
    
</head>
<body>
    <div class ="container">
        <header class ="header">
            <a class="logo" href="/">BloodSend</a>
            <nav class="navbar">
                <ul>
                    <li><a href="/">Home </a></li>
                    <li><a href="/about">About </a></li>
                    <li><a href="/users/<%= userId %>">Profile </a></li>
                </ul>
            </nav>
        </header>

        <script>
            $(document).ready(function() {

                function getdistance(){
                    const maxDistance = $("#distance-select").val()
                    $.ajax({
                        url: `/api/near-users?maxDistance=${maxDistance}`,
                        method: "GET",

                        success: function(users){
                            const donorslist = $("#donorslist")
                            donorslist.empty()

                            users.forEach(user => {
                                donorslist.append(
                                    `<li>
                                        <a href="/users/${user._id}">
                                            <div class="donor-info">
                                                <span class="donor-name">${user.firstname} ${user.lastname}</span>
                                                <span class="donor-bloodtype">${user.bloodtype}</span>
                                            </div>
                                        </a>
                                    </li>`
                                )
                            });
                        },

                        error: function(error){
                            console.log(error)
                        }

                    })
                }
                getdistance()
                $('#refreshbutton').click(getdistance)

            })
        </script>

        <main class="main-content">
            <section class="search-section">
                <h1 class="search-title">Find Blood Donors Near You</h1>
                <p class="search-subtitle">Connect with compatible donors in your area</p>
                
                <div class="search-controls">
                    <select id="distance-select">
                        <option value="999999999999">Anywhere</option>
                        <option value="5000">5 km</option>
                        <option value="10000">10 km</option>
                        <option value="20000">20 km</option>
                        <option value="100000">100 km</option>
                        <option value="5000000">5000 km</option>
                        <option value="50000000">50000 km</option>
                    </select>

                    <button id="refreshbutton">Refresh</button>
                </div>
            </section>
            
            <div class="donorslistcontainer">
                <h2 class="donorslist-title">Available Donors</h2>
                <ul class="donorslist" id="donorslist">
                    
                </ul>
            </div>
        </main>
    </div>
</body>
</html>
